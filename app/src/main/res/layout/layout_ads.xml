<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAds"
        android:layout_width="0dp"
        android:layout_height="220dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@color/green_ads"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txvJudul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Starbucks"
                    android:textStyle="bold"
                    android:textSize="12pt"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/txvDeskripsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get surplus food from Starbucks for 35% off."
                    android:textSize="9pt"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnGetNow"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Get Now!"
                    android:background="@drawable/button_green"
                    app:backgroundTint="@null"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:textSize="6pt"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imvOutlet"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="100dp"
                android:src="@drawable/starbucks"
                android:layout_marginStart="16dp"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
